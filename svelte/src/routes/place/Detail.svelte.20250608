<script lang="ts">
	import { onMount } from 'svelte';
	import { supabasePlaceService } from '$services/supabase';
	import type { Place } from '$services/types';
	import { slide } from 'svelte/transition';

	import HeaderNavigation from './components/HeaderNavigation.svelte';
	import ImageGalleryPreview from './components/ImageGalleryPreview.svelte';
	import PlaceHeader from './components/PlaceHeader.svelte';
	import PlaceAddressInfo from './components/PlaceAddressInfo.svelte';
	import PlaceConveniences from './components/PlaceConveniences.svelte';
	import MenuGrid from '$lib/components/MenuGrid.svelte';
	import PlaceUserReview from './components/PlaceUserReview.svelte';

	// --- Props ---
	const { placeId } = $props<{ placeId?: string }>();

	// --- State ---
	let place = $state<Place | null>(null);
	let showAllMenus = $state(false);
	let showShareDialog = $state(false);

	let allImages = $derived.by(() => {
		if (!place) return [];
		const combined = [
			...(place.images || []),
			...(place.image_urls || []),
			...(place.place_images || [])
		];
		return [...new Set(combined)]; // 중복 제거
	});

	// --- Lifecycle ---
	onMount(async () => {
		if (placeId) {
			const { result } = await supabasePlaceService.getPlaceDetail(placeId);
			place = result.row;
		}
	});

	function handleShare() {
		showShareDialog = true;
	}

	function handleSave() {
		if (!place?.interaction) return;
		place.interaction.is_saved = !place.interaction.is_saved;
		// TODO: API call to update saved state
	}

	function stopPropagation(event: Event) {
		event.stopPropagation();
	}
</script>

<div class="bg-gray-50 min-h-screen">
	{#if place}
		<HeaderNavigation
			placeName={place.name}
			isSaved={place.interaction?.is_saved ?? false}
			onShare={handleShare}
			onSave={handleSave}
		/>

		<!-- <main class="py-8 px-4 sm:px-6 lg:px-8"> -->
		<main class="py-8 px-1">
			<div class="lg:grid lg:grid-cols-3 lg:gap-x-12 max-w-7xl mx-auto">
				<!-- Left Column -->
				<div class="lg:col-span-2">
					{#if allImages.length > 0}
						<ImageGalleryPreview images={allImages} placeName={place.name} />
					{/if}

					<div class="mt-8 bg-white rounded-2xl shadow-sm p-6 md:p-8">
						<PlaceHeader {place} />
						
						<div class="h-px bg-gray-100 my-8"></div>

						{#if place.road}
							<div>
								<h2 class="text-xl font-bold text-gray-900 mb-4">장소 소개</h2>
								<p class="text-gray-700 whitespace-pre-line">{place.road}</p>
							</div>
							<div class="h-px bg-gray-100 my-8"></div>
						{/if}

						<PlaceAddressInfo 
							roadAddress={place.road_address} 
							staticMapUrl={place.static_map_url} 
						/>

						{#if place.conveniences && place.conveniences.length > 0}
							<div class="h-px bg-gray-100 my-8"></div>
							<PlaceConveniences conveniences={place.conveniences} />
						{/if}

						{#if place.menus && place.menus.length > 0}
							<div class="h-px bg-gray-100 my-8"></div>
							<div>
								<h2 class="text-xl font-bold text-gray-900 mb-4">메뉴</h2>
								<MenuGrid 
									menus={place.menus} 
									showAll={showAllMenus} 
									onShowAll={() => (showAllMenus = true)}
								/>
							</div>
						{/if}
					</div>
				</div>

				<!-- Right Column -->
				<div class="mt-12 lg:mt-0 lg:col-span-1">
					<div class="lg:sticky lg:top-24 bg-white rounded-2xl shadow-sm overflow-hidden">
						<PlaceUserReview {place} />
					</div>
				</div>
			</div>
		</main>

		<!-- Share Dialog -->
		{#if showShareDialog}
			<div
				class="fixed inset-0 z-50 bg-black/50 flex items-center justify-center"
				transition:slide
				onclick={() => (showShareDialog = false)}
			>
				<div class="bg-white rounded-xl w-full max-w-sm p-6" onclick={stopPropagation}>
					<h3 class="text-lg font-semibold text-center mb-4">공유하기</h3>
					<p class="text-center text-gray-600 mb-6">
						이 장소의 링크를 복사하여 친구들과 공유해보세요.
					</p>
					<div class="flex items-center border border-gray-300 rounded-lg p-2">
						<input
							type="text"
							value={window.location.href}
							readonly
							class="flex-1 bg-transparent border-0 outline-none text-sm text-gray-800"
						/>
						<button
							class="text-sm font-medium text-white bg-pink-600 px-4 py-1.5 rounded-md hover:bg-pink-700"
							onclick={() => navigator.clipboard.writeText(window.location.href)}
						>
							복사
						</button>
					</div>
				</div>
			</div>
		{/if}
	{:else}
		<div class="flex items-center justify-center h-screen">
			<p class="text-gray-500">장소 정보를 불러오는 중...</p>
		</div>
	{/if}
</div>
